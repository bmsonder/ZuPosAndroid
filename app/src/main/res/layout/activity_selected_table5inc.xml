<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorZuPos"
    android:gravity="center"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_all_layout"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/lblPass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="LÜTEFEN BEKLEYİNİZ"
                android:textColor="@color/colorZuPos"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ActivePanel"
        android:layout_width="match_parent"
        android:layout_height="713dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/back_all_layout"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/zupos_logo_ic_sayfa" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        app:srcCompat="@mipmap/masa_iconu" />

                    <TextView
                        android:id="@+id/masaNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B-5"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/back_spinner"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <Spinner
                        android:id="@+id/rvcDefSpinner"
                        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </TableRow>

            </TableRow>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="307dp"
                android:layout_height="2dp"
                android:background="#009bff" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/menu_iconu" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_menu"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="MENÜ"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/menuLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>
                </TableRow>

                <TableRow
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/back_menu"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bir"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/iki"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/uc"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dort"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/bes"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/alti"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yedi"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sekiz"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dokuz"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ok"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sifir"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sil"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@mipmap/button_arka"
                        android:gravity="center"
                        android:text="SİL"
                        android:textColor="@color/colorZuPos"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="477dp"
                app:srcCompat="@mipmap/menukolon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:background="@drawable/back_menu_icerik"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/menuIcerikLayout"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:gravity="center|top"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/back_menu_icerik"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@mipmap/market"
                                tools:layout_margin="2dp" />

                            <TextView
                                android:id="@+id/tex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SİPARİŞ"
                                android:textColor="@color/colorZuPosMor"
                                android:textSize="12sp"
                                tools:layout_margin="2dp" />

                        </TableRow>

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            app:srcCompat="@mipmap/siparis_line" />

                        <ListView
                            android:id="@+id/SecilenlerList"
                            android:layout_width="match_parent"
                            android:layout_height="155dp" />
                    </LinearLayout>

                </TableRow>

            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center">

            <Button
                android:id="@+id/anaMenu"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/back"
                android:text="ANA MENÜ"
                android:textColor="@color/colorZuPos"
                android:textSize="14sp" />

            <Button
                android:id="@+id/notEkle"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/back"
                android:text="NOT EKLE"
                android:textColor="@color/colorZuPos"
                android:textSize="14sp" />

            <Button
                android:id="@+id/siparisOnay"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:text="SİPARİŞ ONAY"
                android:textColor="@color/colorZuPos"
                android:textSize="14sp" />
        </TableRow>

    </LinearLayout>

</RelativeLayout>